#:import hex kivy.utils.get_color_from_hex

WindowManager:
    Main:

<Main>:
    test_name_text_input: test_name_id
    canvas.before:
        Color:

            rgba: 0,0,0,0
        Rectangle:
            pos: self.pos
            size: self.size
    name: "main"
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            Label:
                id: time_label
                text: "[b]{}[/b]".format(root.timestamp_str)
                font_size: 70
                markup: True
                size_hint_y: 0.5
            BoxLayout:
                orientation: "horizontal"
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        id: rpm_set_point_id
                        text: "[b]RPM Set Point[/b]"
                        font_size: 20
                        markup: True
                        size_hint_y: 0.5
                    TextInput:
                        id: rpm_set_point_text_input_id
                        hint_text: "Input RPM Set Point"
                        font_size: 30
                        multiline: False
                        markup: True
                        halign: "center"
                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                        input_type: 'number'    
                        on_text_validate: root.on_set_rpm_input(self.text)
                    Button:
                        id: rpm_set_point_button_id
                        text: "[b]Jog (rotate motor)[/b]"
                        font_size: 30
                        markup: True
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        orientation: "vertical"
                        Label:
                            id: start_time_label_id
                            text: "[b]Start Time[/b]"
                            font_size: 20
                            markup: True
                        Label:
                            id: start_time_label_id
                            text: "[b]{}[/b]".format(root.start_time_str)
                            font_size: 25
                            markup: True
                    BoxLayout:
                        orientation: "vertical"
                        Label:
                            id: end_time_label_id
                            text: "[b]End Time[/b]"
                            font_size: 20
                            markup: True
                        Label:
                            id: end_time_label_id
                            text: "[b]{}[/b]".format(root.end_time_str)
                            font_size: 25
                            markup: True
                        

            Label:
                text: "[b]{}[/b]".format(root.status_bar_str)
                markup: True
                font_size: 80
                color: 1,1,1,1
                size_hint_y: 0.5
                canvas.before:
                    Color:

                        rgba: 0,0,0,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Button:
                id: run_button_id
                text: "[b]{}[/b]".format(root.run_button_str)
                font_size: 80
                color: 0,0,0,1
                background_normal: ""
                background_color: 0,1,0,1
                markup: True
                on_release: root.run_button_pressed()
                size_hint_y: 0.5
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                TextInput:
                    id: test_name_id
                    hint_text: "Input \nTest Name"
                    multiline: False
                    markup: True
                    font_size: 30
                    halign: "center"
                    padding_y: [self.height / 3.0 - (self.line_height / 2.0) * len(self._lines), 0]
                    # on_focus: root.set_layout('qwerty')
                    on_focus: self.text = "" if self.focus else "{}".format(self.text)
                    on_text_validate: root.on_test_name_evt(self.text)
                Label:
                    text: "[b]{}[/b]".format(root.test_name_str)
                    markup: True
                    font_size: 30

            TextInput:
                hint_text: "Notes"
                multiline: False
                markup: True
                font_size: 40
                on_focus: self.text = "" if self.focus else "{}".format(self.text)
                on_text_validate: root.on_notes_input(self.text)
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "[b]TORQUE (Nm)[/b]"
                    font_size: 30
                    markup: True
                Label:
                    text: "[b]{}[/b]".format(root.torque_sensor_str)
                    font_size: 50
                    markup: True
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "[b]Calculated Blade \nTip Velocity[/b]"
                    text_size: self.size
                    font_size: 30
                    markup: True
                    halign: "center"
                    valign: "middle"
                Label:
                    text: "[b]123[/b]"
                    font_size: 50
                    markup: True
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "[b]Total Revolutions[/b]"
                    font_size: 30
                    markup: True
                Label:
                    text: "[b]123[/b]"
                    font_size: 50
                    markup: True
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "[b]Current RPM[/b]"
                    font_size: 30
                    markup: True
                Label:
                    text: "[b]123[/b]"
                    font_size: 50
                    markup: True
