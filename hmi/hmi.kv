#:import hex kivy.utils.get_color_from_hex

WindowManager:
    Main:

<Main>:
    test_name_text_input: test_name_id
    canvas.before:
        Color:

            rgba: 0,0,0,0
        Rectangle:
            pos: self.pos
            size: self.size
    name: "main"
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            Label:
                id: time_label
                text: "[b]{}[/b]".format(root.timestamp_str)
                font_size: 80
                markup: True
            BoxLayout:
                orientation: "horizontal"
                BoxLayout:
                    orientation: "vertical"
                    Button:
                        id: rpm_set_point_button_id
                        text: "[b]rpm set point[/b]"
                        font_size: 30
                        markup: True
                    Button:
                        id: rpm_set_point_button_id
                        text: "[b]Jog (rotate motor)[/b]"
                        font_size: 30
                        markup: True
                    Button:
                        id: recording_data_button_id
                        text: "[b]recording data[/b]"
                        font_size: 30
                        markup: True
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        id: start_time_label_id
                        text: "[b]input for rpm[/b]"
                        font_size: 35
                        markup: True
                    Label:
                        id: start_time_label_id
                        text: "[b]start time stamp[/b]"
                        font_size: 35
                        markup: True
                    Label:
                        id: start_time_label_id
                        text: "[b]stop time stamp[/b]"
                        font_size: 35
                        markup: True
                        

            Label:
                text: "[b]{}[/b]".format(root.status_bar_str)
                markup: True
                font_size: 80
                color: 1,1,1,1
                canvas.before:
                    Color:

                        rgba: 0,0,0,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Button:
                id: run_button_id
                text: "[b]{}[/b]".format(root.run_button_str)
                font_size: 80
                color: 0,0,0,1
                background_normal: ""
                background_color: 0,1,0,1
                markup: True
                on_release: root.run_button_pressed()
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                TextInput:
                    id: test_name_id
                    hint_text: "Test Name: "
                    multiline: False
                    markup: True
                    font_size: 30
                    halign: "center"
                    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                    on_focus: self.text = "" if self.focus else "{}".format(self.text)
                    on_text_validate: root.on_test_name_evt(self.text)
                Label:
                    text: "[b]{}[/b]".format(root.test_name_str)
                    markup: True
                    font_size: 30
                Label:
                    text: "[b]{}[/b]".format(root.date_str)
                    markup: True
                    font_size: 30

            TextInput:
                hint_text: "Notes"
                markup: True
                font_size: 40
                on_focus: self.text = "" if self.focus else "{}".format(self.text)
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "[b]TORQUE (Nm)[/b]"
                    font_size: 30
                    markup: True
                Label:
                    text: "[b]123[/b]"
                    font_size: 50
                    markup: True
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "[b]Calculated Blade \nTip Velocity[/b]"
                    text_size: self.size
                    font_size: 30
                    markup: True
                    halign: "center"
                    valign: "middle"
                Label:
                    text: "[b]123[/b]"
                    font_size: 50
                    markup: True
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "[b]Total Revolutions[/b]"
                    font_size: 30
                    markup: True
                Label:
                    text: "[b]123[/b]"
                    font_size: 50
                    markup: True
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "[b]Current RPM[/b]"
                    font_size: 30
                    markup: True
                Label:
                    text: "[b]123[/b]"
                    font_size: 50
                    markup: True
